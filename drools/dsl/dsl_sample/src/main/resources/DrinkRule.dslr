import org.example.dslsample.Person
import org.example.dslsample.Drink

expander DrinkRule.dsl

rule "Child"
    when
        ドリンクが注文される
        来店客の年齢が 20 才未満
    then
        "オレンジジュース"を提供する
        料金は 100 円
end

rule "Adult"
    when
        ドリンクが注文される
        来店客の年齢が 20 才以上
    then
        "ビール"を提供する
        料金は 200 円
end
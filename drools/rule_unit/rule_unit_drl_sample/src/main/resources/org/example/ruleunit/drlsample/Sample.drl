package org.example.ruleunit.drlsample;
unit DrinkRuleUnit;

import org.example.ruleunit.drlsample.Person;
import org.example.ruleunit.drlsample.Drink;

rule "Child"
    when
        /persons[ age < 20 ]
    then
        drinkList.add(new Drink("Orange Juice", 100));
end

rule "Adult"
    when
        /persons[ age >= 20 ]
    then
        drinkList.add(new Drink("Beer", 200));
end
